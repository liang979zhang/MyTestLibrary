<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--<include layout="@layout/title_bar_two" />-->


    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:alignContent="flex_start"
        app:flexDirection="row"
        app:flexWrap="wrap">

        <TextView
            android:id="@+id/tv_repla_nor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asddsadad:"
            android:textSize="28mm" />

        <TextView
            android:id="@+id/tv_repla_nor_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10mm"
            android:text="支asdasdsadasdsadsadasdasdasdasdsdasdasdasdasdasdsadasdasdasdasdasdsdsadsadasda持"
            android:textColor="@color/c_3e3e3e"
            android:textSize="28mm" />

    </com.google.android.flexbox.FlexboxLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="144dp"
            android:layout_height="88dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:src="@mipmap/icon_logo" />


        <RelativeLayout
            android:id="@+id/rl_input"
            android:layout_width="540dp"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_icon">

            <ImageView
                android:id="@+id/iv_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_login_mobilephone" />

            <EditText
                android:id="@+id/eet_login_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_icon1"
                android:background="@null"
                android:hint="请输入手机号"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/c_f0f0f0" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_input2"
            android:layout_width="match_parent"
            android:layout_height="100mm"
            android:layout_below="@+id/rl_input"
            android:layout_marginLeft="124mm"
            android:layout_marginTop="64mm"
            android:layout_marginRight="124mm">

            <ImageView
                android:id="@+id/iv_icon2"
                android:layout_width="28mm"
                android:layout_height="28mm"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_login_key" />

            <EditText
                android:id="@+id/eet_login_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="29mm"
                android:layout_toRightOf="@+id/iv_icon2"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textSize="40mm" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2mm"
                android:layout_alignParentBottom="true"
                android:background="@color/c_f0f0f0" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="720mm"
            android:layout_height="111mm"
            android:layout_below="@+id/rl_input2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="122mm"
            android:background="@drawable/login_btn_bg"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="43mm" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_ll_login2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_login"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56mm">


            <TextView
                android:id="@+id/tv_forget_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="33mm"
                android:layout_toLeftOf="@+id/viewa"
                android:text="忘记密码"
                android:textSize="37mm" />


            <View
                android:id="@+id/viewa"
                android:layout_width="2mm"
                android:layout_height="36mm"
                android:layout_centerInParent="true"
                android:background="@color/colorGray6" />

            <TextView
                android:id="@+id/tv_regis_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33mm"
                android:layout_toRightOf="@+id/viewa"
                android:text="注册账号"
                android:textSize="37mm" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_third"
            android:layout_marginTop="239mm">

            <View
                android:layout_width="70mm"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textviewa"
                android:background="@color/c_f0f0f0" />

            <TextView
                android:id="@+id/textviewa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20mm"
                android:layout_marginRight="20mm"
                android:text="第三方账户登录"
                android:textSize="35mm" />

            <View
                android:layout_width="70mm"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textviewa"
                android:background="@color/c_f0f0f0" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="150mm"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_webchat"
                android:layout_width="116mm"
                android:layout_height="116mm"
                android:src="@mipmap/icon_login_wechat" />

            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="116mm"
                android:layout_height="116mm"
                android:layout_marginLeft="118mm"
                android:src="@mipmap/icon_login_qq" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>