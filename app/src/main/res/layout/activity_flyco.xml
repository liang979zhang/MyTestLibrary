<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        tl:tl_iconVisible="false"
        tl:tl_indicator_color="@color/white"
        tl:tl_indicator_corner_radius="5dp"
        tl:tl_indicator_height="8dp"
        tl:tl_indicator_width="30dp"
        tl:tl_textSelectColor="#ff00ff"
        tl:tl_textUnselectColor="@color/white"
        tl:tl_textsize="15sp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fra_viewapger"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>